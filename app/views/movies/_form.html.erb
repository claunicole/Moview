<%=form_with model: @movie do |f| %>
    
    <% if @movie.errors.any? %>
        <div class="m-5">
            <% @movie.errors.each do |error| %>
                 <li><%= error.full_message %></li>
            <%end%>
        </div>
    <% end %>
         
   
     <div class="form-container">
        <div class="form-group">
           <div class="col-md-8 form-sub">
                <%= f.label 'Titulo' %>
                <%= f.text_field :title, class:"form-title" %>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-8 form-sub">
                <%= f.label 'Plataforma' %>
                <%= f.text_field :platform, class:"form-title" %>               
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-8 form-sub">
                <%= f.label 'Fecha de estreno' %>
                <%= f.date_field :date, class:"form-title" %>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-8 form-sub">
                <%= f.label 'Agregar imagen: ', class:"m-3" %>
                <%= f.file_field :cover, class:"add-cover" %>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-8 form-sub">
                <%= f.label 'ReseÃ±a' %>
                <%= f.text_area :review, class:"form-title" %>
            </div>
        </div>
        <div class="form-group">
        <div class="col-md-8 form-sub">
            <%= f.label 'Categoria:' %>
            <%= f.collection_check_boxes :category_ids, Category.all, :id, :name do |category| %>   
                <%= category.label class:"m-2" do %>
                    <%= category.check_box + category.text%>
                <% end %>
            <% end %>            
        </div>
        <div class="form-group">
            <div class="col-md-12 text-center">
                <%= f.submit message, class:"btn btn-primary btn-lg m-5" %>
           </div>
        </div>
        
    </div>
<%end%>
