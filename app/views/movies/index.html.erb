<h1>Catalogo de Peliculas</h1>

<div class="movie-page mb-4">
 <div class="movie-container">
       
    <div class="movie">
    <% @movies.each do |movie| %>
        <div class="card-body card flex-sm-col align-items-center align-items-sm-start w-25 m-5">
            <h4 class="card-title">
                <%= link_to movie.title, show_movie_path(id:movie.id), class:'text-link' %>
            </h4>
            <% if movie.cover.present? %>
              <%= image_tag url_for(movie.cover), style:"max-width:300px" %>
            <% end %>

            <p>Donde ver: <%= movie.platform %></p> 
                <%= link_to "Ver Detalles", show_movie_path(id:movie.id), class:'btn btn-primary m-2' %>
        </div>
    <%end%>
 </div>
</div>

<%= link_to 'Nueva pelicula', "movies/new", class:'text-link' %>
